<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_fragment_rank"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.point.eslee.health_free.rank.RankFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="@color/colorGraySecondaryOpacity50"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rank_point_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Point"
                android:textSize="30sp"
                android:textColor="@color/colorDarkGray"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:layout_gravity="top"
                android:gravity="center_horizontal"/>
            <ListView
                android:id="@+id/rank_point_listview"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:choiceMode="none"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:longClickable="false"></ListView>
            <LinearLayout
                android:id="@+id/android:empty"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/colorGraySecondaryOpacity50">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No Search results are currently selected."
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_rank_trophy"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@color/colorDarkGray">
                <TextView
                    android:id="@+id/rank_point_mynum"
                    android:layout_width="30dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:layout_height="wrap_content"
                    android:text="1"
                    />
                <TextView
                    android:id="@+id/rank_point_myname"
                    android:text="USER"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rank_point_myvalue"
                    android:text="62626"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_width="90dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
